<main class="page">
  <div class="chat-page"> 
    <div class="chat-page__main"> 
      {{> UserSmall name="User name" message="userMail@test.ru" }}
      <p>{{> Search title="Поиск" name="search" }}</p>
    </div>
    <div class="chat-page__list"></div>
  </div>
  <div id="no-message-block" class="element-center" style="display: flex;"> Выберите чат чтобы отправить сообщение</div>
  <div id="message-block" class="message-page__block" style="display: none;">
    <div id="user-message-block" style="max-width: 900px;"></div>
    <div class="message-page">
      <form class="element-center">
        <div class="relative">
          <label for="upload-photo">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" style="rotate: 28deg;" viewBox="0 0 16 16">
              <path d="M4.5 3a2.5 2.5 0 0 1 5 0v9a1.5 1.5 0 0 1-3 0V5a.5.5 0 0 1 1 0v7a.5.5 0 0 0 1 0V3a1.5 1.5 0 1 0-3 0v9a2.5 2.5 0 0 0 5 0V5a.5.5 0 0 1 1 0v7a3.5 3.5 0 1 1-7 0z"/>
            </svg>
          </label>
          <input type="file" name="photo" id="upload-photo" />
        </div>
        <textarea type="text" name="message-page" rows="1" placeholder="Сообщение" class="message-page__field"></textarea>
        <button class="message-page__btn-circle" type="submit">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-right" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8"/>
          </svg>
        </button>
      </form>
    </div>
  </div>
</main>
